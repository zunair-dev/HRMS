<div class="container mx-auto p-4">
  <h2 class="text-2xl font-semibold mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 rounded-md shadow-sm border border-gray-300 w-full" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Send me reset password instructions", class: "bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md shadow" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
