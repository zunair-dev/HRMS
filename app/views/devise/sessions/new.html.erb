<div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-6 mt-10">
  <h2 class="text-2xl font-semibold mb-6">Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
    <div>
      <%= f.label :email, class: "block text-gray-600 font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded px-3 py-2 mt-1" %>
    </div>
  
    <div>
      <%= f.label :password, class: "block text-gray-600 font-medium" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded px-3 py-2 mt-1" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "text-indigo-600" %>
        <%= f.label :remember_me, class: "ml-2 text-gray-600" %>
      </div>
    <% end %>
  
    <div class="mt-4">
      <%= f.submit "Log in", class: "w-full bg-indigo-600 text-white rounded px-4 py-2 font-medium hover:bg-indigo-700" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
