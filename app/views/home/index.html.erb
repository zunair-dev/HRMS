<div class="bg-blue-500 p-4">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-semibold text-white">Home#index</h1>
    <div class="flex space-x-4">
      <% if user_signed_in? %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'text-white', data: { confirm: 'Are you sure you want to log out?' } %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: 'text-white' %>
        <%= link_to 'Signup', new_user_registration_path, class: 'text-white' %>
      <% end %>
    </div>
  </div>
  <p class="text-white">Find me in app/views/home/index.html.erb</p>
</div>
